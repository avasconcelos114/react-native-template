{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "extends" : [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "rules" : {
    "arrow-body-style" : 0,
    "class-methods-use-this": 0,
    "indent": [2, 4, {"SwitchCase": 0}],
    "curly": [2, "all"],
    "no-undef": 0,
    "no-else-return": 0,
    "import/prefer-default-export": 0,
    "function-paren-newline": 0,
    "arrow-parens": 0
  }
}